@model IEnumerable<Department>

<h2>Departments</h2>

<p>
    <a href="@Url.Action("Create", "Department")" class="btn btn-primary">Create New Department</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Department", new { id = department.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Department", new { id = department.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
